<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_szerver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="482dp"
        android:background="@drawable/server"
        android:lineSpacingExtra="8sp"
        android:text="Szerver"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/button_kliens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="114dp"
        android:layout_marginRight="114dp"
        android:layout_marginBottom="97dp"
        android:background="@drawable/kliens"
        android:gravity="bottom|center"
        android:text="Kliens"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="63dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:layout_marginBottom="358dp"
        android:gravity="center"
        android:text="Válasszon, szerver vagy kliens módban szeretné használni az applikációt!"
        android:textColor="#000000"
        android:textSize="18sp" />


</RelativeLayout>